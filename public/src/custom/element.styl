/* Form */
.form-control
.custom-select
  &:focus
    border-color #26a69a
    box-shadow none

.input-group-text
  font-size 0.8rem
  background-color #ffffff
  border-right 1px solid #ffffff
  z-index 3
  margin-left -4px
  padding 0.375rem 0.25rem 0.375rem 0.75rem

  &[disabled]
    background-color #f6f6f6

.custom-select
  background url('../img/icon/angle-arrow-down.svg') no-repeat right 0.5rem center / 6px 8px

  &:disabled
    background-color #f6f6f6

/* Button */
.btn-warning
.btn-info
  color #ffffff

  &:hover
    color #eeeeee

/* Tooltip */
.tooltip[role='tooltip']
  z-index 1500
  top 0

/* Icon */
@keyframes rotating
  from
    transform rotate(0deg)

  to
    transform rotate(360deg)

.refresh
  > i
    color #454545
    font-size 0.9rem

    &.rotating
      animation rotating 2.5s linear infinite
