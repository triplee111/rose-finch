{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    // "importsNotUsedAsValues": "preserve",
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@c/*": [
        "src/component/*"
      ],
      "@m/*": [
        "src/module/*"
      ],
      "@t/*": [
        "src/theme/*"
      ],
      "@u/*": [
        "src/utils/*"
      ],
      "@public/*": [
        "public/static/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "files": [
    "src/shims-tsx.d.ts",
    "src/shims-vue.d.ts",
    "src/shims-app.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "src/utils/vendor"
  ]
}