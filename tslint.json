{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "build/**",
      "dist/**",
      "config/**",
      "docs/**",
      "public/**",
      "tests/**",
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "never",
      "ignore-bound-class-methods"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "ordered-imports": false,
    "no-floating-promises": false,
    "object-literal-sort-keys": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning"
    },
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "no-empty": [
      true,
      "allow-empty-catch",
      "allow-empty-functions"
    ],
    "no-unused-expression": [
      true,
      "allow-fast-null-checks",
      "allow-new"
    ],
    "handle-callback-err": false
  }
}
